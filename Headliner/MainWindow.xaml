    <Grid Margin="0,0,2,13">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="511*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="listView" Grid.Column="1" HorizontalAlignment="Left" Margin="23,136,0,98" Width="720">
